<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".CodeCraftApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodeCraft"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.CodeCraft">
        </activity>
        <activity
            android:name=".auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.CodeCraft" />
        <activity
            android:name=".languageselection.LanguageSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.CodeCraft" />
        <activity
            android:name=".dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.CodeCraft" />
        <activity
            android:name=".profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.CodeCraft" />
        <activity
            android:name=".tests.TestsActivity"
            android:exported="false"
            android:theme="@style/Theme.CodeCraft" />
        <activity
            android:name=".chat.AiChatActivity"
            android:exported="false"
            android:theme="@style/Theme.CodeCraft" />
        <activity
            android:name=".auth.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".exercises.PythonExerciseActivity"
            android:exported="false" />
        <activity
            android:name=".exercises.JavaExerciseActivity"
            android:exported="false" />
        <activity
            android:name=".exercises.HtmlExerciseActivity"
            android:exported="false" />
    </application>

</manifest>